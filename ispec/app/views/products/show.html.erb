<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@product.image, :width => 50) if @product.image.present? %>
</p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Sku:</strong>
  <%= @product.sku %>
</p>

<p>
  <strong>Catagory:</strong>
  <%= @product.catagory %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Subdescription:</strong>
  <%= @product.subdescription %>
</p>

<b>Subsections:</b>
<ul>
  <% @product.subsections.each do |subsection| %>
      <li><%= subsection.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
