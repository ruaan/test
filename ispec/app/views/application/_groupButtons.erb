<div class="btn-group btn-group-justified">
  <div class="btn-group">
    <button type="button" data-toggle="modal" onclick="account()" data-target="#myModal" class="btn btn-lg btn-primary">   <i class="fa fa-plus"></i>
      New Account</button>
  </div>
  <div class="btn-group">
    <button type="button" data-toggle="modal" onclick="project()" data-target="#myModal" class="btn btn-lg btn-success"> <i class="fa fa-plus"></i>
      New Project</button>
  </div>
  <div class="btn-group">
    <button type="button" data-toggle="modal" onclick="fav()" data-target="#myModal" class="btn btn-lg btn-info"> Favourites</button>
  </div>
</div>

<!-- Modal -->
<div class="modal fade " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>

<script>
    function account() {
        $(".modal-body").html("<%= escape_javascript(render 'accounts/form') %>");
        $("#myModalLabel").html("Add New Account");
        $(".modal-dialog").removeClass('modal-lg');
    }

    function project() {
        $(".modal-body").html("<%= escape_javascript(render 'projects/form') %>");
        $("#myModalLabel").html("Add New Project");
        $(".modal-dialog").removeClass('modal-lg');
    }
    function fav() {
        $(".modal-body").html("<%= escape_javascript(render 'fav/form') %>");
        $("#myModalLabel").html("Global Favourites");
        $(".modal-dialog").addClass('modal-lg');
    }
</script>